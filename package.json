{
  "name": "noctisai",
  "version": "1.0.0",
  "description": "Noctisai - Private AI Chat - Secure Electron app with screen-sharing protection",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "start": "electron .",
    "test": "node --test",
    "rebuild": "cd native && node-gyp rebuild",
    "install": "cd native && node-gyp rebuild"
  },
  "keywords": [
    "electron",
    "ai",
    "chat",
    "privacy",
    "encryption"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "node-gyp": "^9.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "marked": "^11.1.1",
    "form-data": "^4.0.0",
    "groq-sdk": "^0.5.0",
    "node-addon-api": "^7.0.0"
  },
  "build": {
    "appId": "com.noctisai.app",
    "productName": "Noctisai",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/**/*"
    ]
  }
}